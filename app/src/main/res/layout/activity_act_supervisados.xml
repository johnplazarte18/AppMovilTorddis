<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
    tools:context=".ActSupervisados">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="1dp"
        android:padding="10dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnActRegSupervisado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_round_corners"
            android:onClick="ocCuentaSupervisados"
            android:text="Nuevo"
            android:textColor="@color/white"
            app:backgroundTint="@color/Torddis_1"
            app:icon="@drawable/ic_anadir"
            app:iconGravity="textStart"
            app:iconPadding="10dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcvSupervisados"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>