<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
<com.google.android.material.card.MaterialCardView
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="20dp"
    app:cardElevation="6dp"
    app:contentPadding="4dp"
    app:strokeColor="@color/Torddis_1"
    app:strokeWidth="3dp"
    android:theme="@style/Theme.MaterialComponents.Light.NoActionBar">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="146dp"
        android:padding="2dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_image_Supervisado"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="23dp" />

        <TextView
            android:id="@+id/item_distraccion"
            android:layout_width="234dp"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="13dp"
            android:layout_toEndOf="@+id/item_image_Supervisado"
            android:layout_toRightOf="@+id/item_image_Supervisado"
            android:text="Nombre: supervisado supervisado supervisado supervisado"
            android:textColor="@color/Torddis_1"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_edad_sup"
            android:layout_width="228dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_distraccion"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@+id/item_image_Supervisado"
            android:layout_toRightOf="@+id/item_image_Supervisado"
            android:text="Edad: 13 años 1 meses 0 días"
            android:textColor="@color/Torddis_1"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnEntrenar"
            android:layout_width="107dp"
            android:layout_height="40dp"
            android:layout_below="@+id/item_edad_sup"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="16dp"
            android:layout_toEndOf="@+id/item_image_Supervisado"
            android:background="@drawable/btn_round_corners"
            android:backgroundTint="@color/black"
            android:text="Entrenar"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnModificarSup"
            android:layout_width="108dp"
            android:layout_height="42dp"
            android:layout_below="@+id/item_edad_sup"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="16dp"
            android:layout_toEndOf="@+id/btnEntrenar"
            android:background="@drawable/btn_round_corners"
            android:backgroundTint="@color/teal_700"
            android:text="Modificar"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>
</LinearLayout>